rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow access only to authenticated users
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Specific rules for homework collection
    match /homework/{assignmentId} {
      // Students can read their assignments and create submissions
      allow read: if request.auth != null;
      allow create: if request.auth.token.email.matches('.*teacher@.*');
      allow update: if request.auth != null && 
        (request.auth.uid == resource.data.studentId || 
         request.auth.token.email.matches('.*teacher@.*'));
    }
    
    // Submissions collection (if you create a separate one)
    match /submissions/{submissionId} {
      allow read, write: if request.auth != null;
    }
    
    // User profiles
    match /users/{userId} {
      allow read: if request.auth.uid == userId;
      allow write: if request.auth.uid == userId;
    }
  }
}
